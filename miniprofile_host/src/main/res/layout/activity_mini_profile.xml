<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/profile_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold"
            android:text="@string/mini_profile_initialized" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_details_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/profile_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mini_profile_name"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                app:layout_constraintEnd_toStartOf="@id/profile_name_value"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_name_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/mini_profile_placeholder"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_name_label"
                app:layout_constraintTop_toTopOf="@id/profile_name_label" />

            <TextView
                android:id="@+id/profile_email_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_email"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                app:layout_constraintEnd_toStartOf="@id/profile_email_value"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_name_label" />

            <TextView
                android:id="@+id/profile_email_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_placeholder"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_email_label"
                app:layout_constraintTop_toTopOf="@id/profile_email_label" />

            <TextView
                android:id="@+id/profile_phone_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_phone"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                app:layout_constraintEnd_toStartOf="@id/profile_phone_value"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_email_label" />

            <TextView
                android:id="@+id/profile_phone_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_placeholder"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_phone_label"
                app:layout_constraintTop_toTopOf="@id/profile_phone_label" />

            <TextView
                android:id="@+id/profile_image_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_image"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                app:layout_constraintEnd_toStartOf="@id/profile_image_value"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_phone_label" />

            <TextView
                android:id="@+id/profile_image_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_placeholder"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_image_label"
                app:layout_constraintTop_toTopOf="@id/profile_image_label" />

            <TextView
                android:id="@+id/profile_updated_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_last_updated"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                app:layout_constraintEnd_toStartOf="@id/profile_updated_value"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profile_image_label" />

            <TextView
                android:id="@+id/profile_updated_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/mini_profile_placeholder"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_updated_label"
                app:layout_constraintTop_toTopOf="@id/profile_updated_label"
                app:layout_constraintBottom_toBottomOf="@id/profile_updated_label" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_refresh"
            style="@style/Widget.Material3.Button.FilledTonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/mini_profile_refresh" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_clear"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/mini_profile_clear" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/mini_profile_close" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

